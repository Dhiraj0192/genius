{
    "version": 2,
    "outputDirectory": "public",
    "framework": null,
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.8.0"
        }
    },
    "routes": [
        {
            "src": "/(css|js|img|images|fonts|build)/(.*)",
            "dest": "/$1/$2"
        },
        {
            "src": "/favicon.ico",
            "dest": "/favicon.ico"
        },
        {
            "src": "/robots.txt",
            "dest": "/robots.txt"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}
